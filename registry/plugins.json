{
  "version": "1.0.0",
  "repository": "github:shashankatporter/custom-devbox-plugin",
  "description": "Porter Plugins Registry",
  "categories": {
    "linting": "Code quality and style checking tools",
    "security": "Security scanning and vulnerability assessment",
    "testing": "Testing utilities and coverage reporting",
    "database": "Database management and seeding tools",
    "deployment": "Deployment and infrastructure tools"
  },
  "plugins": {
    "mylinter": {
      "name": "mylinter",
      "version": "1.0.0",
      "description": "Porter Organization Code Linter",
      "category": "linting",
      "dependencies": ["shellcheck", "hadolint"],
      "usage": {
        "install": "devbox add github:shashankatporter/custom-devbox-plugin#mylinter",
        "install_versioned": "devbox add github:shashankatporter/custom-devbox-plugin#mylinter-v1.0.0",
        "run": "mylinter",
        "devbox_script": "devbox run lint"
      },
      "configuration": {
        "config_file": ".porter-linter.yml",
        "env_vars": {
          "PORTER_LINTER_CONFIG": "Path to linter configuration file"
        }
      }
    },
    "securityscanner": {
      "name": "securityscanner", 
      "version": "1.0.0",
      "description": "Porter Security Vulnerability Scanner",
      "category": "security",
      "dependencies": ["trivy"],
      "usage": {
        "install": "devbox add github:shashankatporter/custom-devbox-plugin#securityscanner",
        "install_versioned": "devbox add github:shashankatporter/custom-devbox-plugin#securityscanner-v1.0.0",
        "run": "securityscanner"
      },
      "configuration": {
        "config_file": ".porter-security.yml",
        "env_vars": {
          "PORTER_SECURITY_CONFIG": "Path to security scanner configuration"
        }
      }
    },
    "dbseeder": {
      "name": "dbseeder",
      "version": "1.0.0", 
      "description": "Porter Database Seeder & Migration Tool",
      "category": "database",
      "dependencies": ["postgresql"],
      "usage": {
        "install": "devbox add github:shashankatporter/custom-devbox-plugin#dbseeder",
        "install_versioned": "devbox add github:shashankatporter/custom-devbox-plugin#dbseeder-v1.0.0",
        "run": "dbseeder"
      },
      "configuration": {
        "config_file": ".porter-db.yml",
        "seeds_dir": "./seeds",
        "env_vars": {
          "PORTER_DB_CONFIG": "Database configuration file path",
          "PORTER_SEEDS_DIR": "Directory containing SQL seed files"
        }
      }
    },
    "coveragereporter": {
      "name": "coveragereporter",
      "version": "1.0.0",
      "description": "Porter Code Coverage Reporter", 
      "category": "testing",
      "dependencies": [],
      "usage": {
        "install": "devbox add github:shashankatporter/custom-devbox-plugin#coveragereporter",
        "install_versioned": "devbox add github:shashankatporter/custom-devbox-plugin#coveragereporter-v1.0.0",
        "run": "coveragereporter"
      },
      "supported_formats": [
        "coverage.xml",
        "coverage.json",
        "coverage.lcov", 
        "coverage/lcov.info",
        "target/site/jacoco/jacoco.xml"
      ]
    }
  }
}
